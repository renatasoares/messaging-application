<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="100dp"
    android:paddingTop="3dp"
    android:orientation="horizontal">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:paddingRight="40dp"
            android:orientation="vertical">

            <TextView
                android:id="@+id/newChatTitle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="New Chat Solicitation"
                android:textSize="20dp" />

            <TextView
                android:id="@+id/newChatInviter"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Inviter"
                android:textSize="15dp" />

        </LinearLayout>

    <ImageButton
        android:id="@+id/acceptButton"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:background="@drawable/acceptsolicitation" />

    <ImageButton
        android:id="@+id/declineButton"
        android:layout_width="45dp"
        android:layout_height="45dp"
        android:background="@drawable/declinesolicitation" />

</LinearLayout>


